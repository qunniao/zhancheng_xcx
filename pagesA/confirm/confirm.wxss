}

.name_phone_address .ri .name_phone .name{
  font-size: 34rpx;
  color: #333;
}

.name_phone_address .ri .name_phone .phone{
  font-size: 24rpx;
  color: #868484;
  font-weight: bold;
  margin-top: 10rpx;
  margin-left: 20rpx;
