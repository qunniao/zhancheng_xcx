.addressList{
  width: 100%;
  min-height: 140rpx;
  display: flex;
  align-items: center;
}

.name_phone_address{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  width: 80%;
}

.name_phone{
  display: flex;
}

.name{
  font-size: 32rpx;
}

.phone{
  font-size: 24rpx;
  color: #8C8C8C;
  margin-left: 30rpx;
  margin-top: 8rpx;
}

.address{
  width: 100%;
  font-size: 28rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
}

.edit{
  width: 15%;
  margin-left: 5%;
  height: 55rpx;
  line-height: 55rpx;
  color: #8C8C8C;
  text-align: center;
  border-left: 1px solid rgb(206, 204, 204);
}

.edit text{
  font-size: 30rpx;
  color: #8C8C8C;
}

button{
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  border: 1px solid red;
  background: red;
  color: #fff;
  border-radius: 40rpx;
  margin-top: 15rpx;
}

.bottomButton{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 50rpx;
}

.moren{
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  background: #FFF1EE;
  color: #E36B24;
}