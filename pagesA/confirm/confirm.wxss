  position: absolute;
  right: 50rpx;
}

.orderItem{
  width: 94%;
  margin-left: 3%;
  background: #fff;
  display: flex;
  flex-direction: column;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.img_name_price{
  display: flex;
}

.img_name_price image{
  width: 200rpx;
  height: 180rpx;
  border-radius: 20rpx;
  margin: 30rpx 20rpx 0 30rpx;
}

.img_name_price .name{
  font-size: 32rpx;
  font-weight: 400;
  margin-top: 30rpx;
}

.img_name_price .num{
  font-size: 22rpx;
  margin-left: 100rpx;
  margin-top: 30rpx;
}

.img_name_price .price{
  font-size: 30rpx;
  position: absolute;
  font-weight: 400;
  right: 50rpx;
  margin-top: 30rpx;
}

.coupon{
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  position: relative;
}

.coponName{
  font-size: 32rpx;
  font-weight: bold;
  padding-left: 20rpx;
  letter-spacing: 2rpx;
}

.rigth{
  height: 40rpx;
  line-height: 40rpx;
  display: flex;
  background: linear-gradient(to right, #ED7835 , #EB502E);
  font-size: 22rpx;
  color: #fff;
  position: absolute;
  right: 50rpx;
  top: 30rpx;
  padding: 0 10rpx;
}

.rigth image{
  width: 40rpx;
  height: 35rpx;
  margin-top: 4rpx;
}

.righta{
  border: solid #7B7A7A;
  border-width: 0 1px 1px 0;
  display: inline-block;
  padding: 5px;
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
  position: absolute;
  right: 20rpx;
  top: 40rpx;
}


.totalPrice{
  height: 80rpx;
  line-height: 80rpx;
  float: right;
  position: relative;
}

.totalPrice .price{
  position: absolute;
  right: 20rpx;
  font-size: 26rpx;
}

.money{
  font-size: 30rpx;
  font-weight: bold;
}

.payment{
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
}

.payment text{
  font-size: 40rpx;
  color:#F33914;
  font-weight: bold;
  padding-left: 20rpx;
}

#offer{
  font-size: 26rpx;
  color: #A3A1A1;
  position: relative;
  top: -6rpx;
}

#pay{
  position: absolute;
  right: 30rpx;
  top: 20rpx;
  background: linear-gradient(to right,#F45E30, #F3320E);
  padding: 0 60rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  font-weight: bold;
  font-size: 36rpx;
  border-radius: 40rpx;
}

.drawer_attr_box{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1001;
  overflow: hidden;
  background: #F7F7F7;
  padding-bottom: 20rpx;
}

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
}

