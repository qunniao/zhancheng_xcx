page{
  background: #f6f9fd;
}

.header{
  width: 100%;
  margin-top: 60rpx;
}

.commonHead_left_back{
  color: #fff;
}

.commonHead{
  background: #307BF6;
  color: #fff;
}

.header text{
  font-size: 28rpx;
  padding-left: 2.5%;
  color: #333333;
  letter-spacing: 2rpx;
}

.header textarea{
  margin: 0 2.5%;
  width: 89%;
  height: 500rpx;
  border: 1px solid #D9DFE9;
  padding: 0 20rpx;
  background: #fff;
  margin-top: 20rpx;
  border-radius: 6rpx;
}

.contact{
  width: 100%;
  margin-top: 80rpx;
}

.contact text{
  font-size: 30rpx;
  padding-left: 2.5%;
  letter-spacing: 2rpx;
  color: #333333;
}

.contact input{
  width: 89%;
  margin-left: 2.5%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  border: 1px solid #D9DFE9;
  background: #fff;
  border-radius: 6rpx;
  margin-top: 10rpx;
}

.contactPhone{
  width: 100%;
  margin-top: 60rpx;
}

.contactPhone text{
  font-size: 30rpx;
