}

.submit{
  width: 100%;
  margin-top: 80rpx;
  text-align: center;
}

.submit button{
  width: 90%;
  height: 90rpx;
  background: #307BF6;
  color: #fff;
  font-size: 36rpx;
  border-radius: 14rpx;
  background-image: linear-gradient(to right,#307FF6,#4667F6);
  display: flex;
  align-items: center;
  justify-content: center;
}

.dibu{
  width: 100%;
  height: 80rpx;
}

.ad_popError{
  background: #de352d;
  color: #fff;
  height: 58rpx;
  line-height: 58rpx;
  font-size: 24rpx;
  text-align: center;
  width: 100%;
  z-index:3;
