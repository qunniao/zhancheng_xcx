button{
  width: 50%;
  height: 70tpx;
  line-height: 70rpx;
  font-size: 30rpx;
  color: #fff;
  border-radius: 35rpx;
  background: #F3320E;
  position: absolute;
  left: 25%;
  bottom: 100rpx;
}

switch{
  position: absolute;
  right: 30rpx;
}

.wx-switch-input{
  width:42px !important;
  height:20px !important;
}

.wx-switch-input::before{width:41px !important;height: 20px !important;}
.wx-switch-input::after{width: 18px !important;height: 18px !important;}

